extends ../layouts/common.pug
block content
  h1 Users 
  form(action="/users/search", method="GET", class="d-flex")
    input(type="text", name="q", class="form-control", value= search)
    button(class="btn btn-success")  Search
  table.table 
    tr
      th Avatar
      th Name 
      th Phone
      th Actions 
    each user in users 
      tr 
        td 
          img(src= user.avatar, width='32px')
        td= user.name 
        td= user.phone 
        td
          a.btn.btn-light(href="/users/" + user.id) View
        