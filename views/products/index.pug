extends ../layouts/common.pug
block content
  h1 Products 
  .text-end
    input 
    button.btn.btn-primary Search
  .product
    each product in products
        .card
          img.card-img-top(src= product.image, alt='product')
          .card-body
            h5.card-title= product.name
            p.card-text= product.description
            a.btn.btn-primary(href='/cart/add/' + product.id) Add to cart
  nav.pt-5
    ul.pagination
      li.page-item
        a.page-link(href= '/products?page=' + (page - 3)) Previous
      li.page-item
        a.page-link(href='/products?page=' + (page - 1))= page - 1
      li.page-item
        a.page-link(href='/products?page=' + page)= page
      li.page-item
        a.page-link(href='/products?page=' + (page + 1))= page + 1
      li.page-item
        a.page-link(href='/products?page=' + (page + 3)) Next